{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "composite": true
  },
  "typeRoots": ["src/types", "node_modules/@types"],
  "include": ["src"],
  "exclude": ["**/node_modules", "**/__tests__"]
}
